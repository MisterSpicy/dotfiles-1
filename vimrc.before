let mapleader = ","
noremap \ ,

set t_Co=256

" Needed for iTerm2 Cursor Handling
nnoremap <Esc>A <up>
nnoremap <Esc>B <down>
nnoremap <Esc>C <right>
nnoremap <Esc>D <left>

" must be active for textobj-usr plugin
runtime macros/matchit.vim

if has('mac')
  " use mac clipboard
  set clipboard=unnamed
endif
